<!DOCTYPE html>
<html >
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Gallery Images</title>
        <link rel="stylesheet" href="css/gallery.css">
        <script src='scripts/gallery.js' defer></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />
    </head>
    
    </body>
    <div id="gallery" class="pagefont flowdown fullwidth padded">
        <h1>Gallery</h1>
        <div class="flowappropriately fullwidth">
          <div class="forty padded slideshow-container">
            <% for (var i = 0; i < gallery_images.length; i++) { %>
               <div class="gallerySlides fade">
                 <img src="img/gallery/<%=gallery_images[i].filename%>" alt="<%=gallery_images[i].alt%>" class="maxheight">
            </div>
           <% } %>
               <!-- Next and previous buttons -->
               <a class="prev" onclick="showSlides('gallery', -1, false)">&#10094;</a>
               <a class="next" onclick="showSlides('gallery', 1, false)">&#10095;</a>
          </div>
        </div>
      </div>
    </body>
</html>